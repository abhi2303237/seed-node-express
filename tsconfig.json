{
    "compilerOptions": {
        "skipLibCheck": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
            ],
            "@services/*": ["src/services/*"],
            "@dto/*": ["src/DTO/*"],
            "@utils/*": ["src/utils/*"],
            "@module/*": ["src/module/*"],
            "@middleware/*": ["src/middlewares/*"],
            "@config/*": ["src/config/*"]
        }
    },
    "include": [
        "src/**/*"
    ]
}
